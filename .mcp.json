{
    "mcpServers": {
        "playwright": {
            "command": "cmd",
            "args": [
                "/c",
                "npx",
                "-y",
                "@playwright/mcp@latest"
            ]
        },
        "Payload": {
            "command": "cmd",
            "args": [
                "/c",
                "npx",
                "-y",
                "mcp-remote",
                "http://127.0.0.1:3000/api/mcp",
                "--header",
                "Authorization: Bearer API-KEY-HERE"
            ]
        }
    }
}